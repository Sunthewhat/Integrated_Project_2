generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model user {
  userId          Int           @id @default(autoincrement())
  username        String
  password        String
  nameTitle       String?
  lastname        String?
  email           String?
  expectedMonthly String?
  firstname       String?
  profileImage    String?
  cabonOffSet     cabonOffset[]
}

model cabonOffset {
  userId          Int
  certificateId   String     @id @default(uuid())
  amount          Int
  date            DateTime   @default(now())
  unit            retailUnit
  userCertificate user       @relation(fields: [userId], references: [userId])

  @@index([userId], map: "cabonOffset_userId_fkey")
}

model trader {
  traderId    Int     @id @default(autoincrement())
  companyName String
  amount      Int
  available   Boolean
}

enum retailUnit {
  cc
  kg
}
