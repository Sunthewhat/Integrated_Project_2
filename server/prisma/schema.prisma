generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model user {
  userId          Int           @id @default(autoincrement())
  username        String
  password        String
  nameTitle       String?
  firstname       String?
  lastname        String?
  email           String?
  expectedMonthly String?
  profileImage    String?
  certificate     certificate[]
}

model certificate {
  certificateId     String   @id @default(uuid())
  userId            Int
  traderId          Int
  date              DateTime @default(now())
  userCertificate   user     @relation(fields: [userId], references: [userId])
  traderCertificate trader   @relation(fields: [traderId], references: [traderId])

  @@index([userId], map: "certificate_userId_fkey")
  @@index([traderId], map: "certificate_traderId_fkey")
}

model trader {
  traderId    Int           @id @default(autoincrement())
  companyName String
  amount      Int
  available   Boolean
  certificate certificate[]
}
